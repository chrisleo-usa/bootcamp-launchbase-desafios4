{% extends "layout.njk" %}

{% block content %}
  <div class="card tableContainer">

    <div class="header">
      <a class="button" href="/members/create">Novo</a>
      <form action="/members" method="GET">
        <input type="text" name="filter" placeholder="Filtrar por nome" value="{{filter}}">
        <button type="submit">Filtrar</button>  
      </form>
    </div>
    <table width="100%">
      <thead>
        <tr>
          <th>Membro</th>
          <th>Altura</th>
          <th>Peso</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td data-label="Membro">
              <span style="background-image: url({{member.avatar_url}})"></span>{{member.name}}
            </td>
            <td data-label="Altura (cm)">{{member.height}}cm</td>
            <td data-label="Peso (kg)">{{member.weight}}kg</td>
            <td data-label="Ação"><a href="/members/{{member.id}}">ver</a></td>
          </tr>
        {% endfor %}
         
      </tbody>
    </table>

    <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}>
    </div>
  </div>

{% endblock content %}