<div class="item">
  <div>Avatar Url</div>
  <div>
    <input type="url" name="avatar_url" placeholder="http://" value="{{ instructor.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Instrutor</div>
  <div>
    <input type="text" name="name" placeholder="Nome" value="{{ instructor.name }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div><input type="date" name="birth" value="{{ instructor.birth }}"></div>
</div>

<div class="item">
  <div>Sexo</div>
  <div>
    <span>
      <input type="radio" name="gender" value="F" {% if instructor.gender == 'F' %} checked="checked" {% endif %}>Feminino
    </span>
    <span>
      <input type="radio" name="gender" value="M" {% if instructor.gender == 'M' %} checked="checked" {% endif %}>Masculino
    </span>
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="graduation" id="graduation">
      <option value="empty"></option>
      <option value="medio" {% if instructor.graduation == 'medio' %} selected {% endif %}>Ensino Médio Completo</option>
      <option value="graduated" {% if instructor.graduation == 'graduated' %} selected {% endif %}>Ensino Superior Completo</option>
      <option value="masters" {% if instructor.graduation == 'masters' %} selected {% endif %}>Mestrado</option>
      <option value="doctorate" {% if instructor.graduation == 'doctorate' %} selected {% endif %}>Doutorado</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Área de Atuação</div>
  <div>
    <input type="text" name="services" placeholder="Separe por vírgula" value="{{ instructor.services }}">
  </div>
</div>

<button type="submit">Salvar</button>